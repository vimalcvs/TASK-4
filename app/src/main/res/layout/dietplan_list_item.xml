<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:layout_gravity="center_horizontal"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/dietplan_item_background"
    android:gravity="center_horizontal"
    android:paddingStart="@dimen/_10sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp">


    <androidx.cardview.widget.CardView
        android:id="@+id/dietDishImageCard"
        android:layout_width="@dimen/_90sdp"
        android:layout_height="@dimen/_90sdp"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="@dimen/_6sdp">

        <ImageView
            android:id="@+id/dietDishImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_diet_dish_main"


            />
    </androidx.cardview.widget.CardView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/dietDishImageCard"
        android:orientation="vertical"
        android:padding="@dimen/_4sdp">

        <TextView
            android:id="@+id/tv_dietDishTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:text="English Croissant"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_local_fire_department_24"
                app:tint="@color/secondary_text_color" />

            <TextView
                android:id="@+id/tv_kcalValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="1"
                android:text="160 Kcal"
                android:textSize="@dimen/_12ssp" />

            <ImageView
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_baseline_access_time_filled_24"
                app:tint="@color/secondary_text_color" />

            <TextView
                android:id="@+id/tv_timeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_2sdp"
                android:layout_weight="1"
                android:text="5:20"
                android:textSize="@dimen/_12ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnColorPrimary"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_weight="1"
                android:background="@drawable/dietplan_item_background"
                android:backgroundTint="@color/easyColorPrimary"

                android:gravity="center"
                android:text="Easy"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/btnColorSecondary"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/dietplan_item_background"
                android:backgroundTint="@color/easyColorSecondary"
                android:gravity="center"
                android:text="2 steps"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_10ssp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
